<project name="traildevils-build" basedir=".">
	<property name="webapp.dir" value="/var/www/html" />
	<property name="test.dir" value="test-results" />
	
	<target name="clean">
		<delete includeemptydirs="true">
    		<fileset dir="${webapp.dir}" includes="**/*"/>
  		</delete>
		<delete dir="test-results"/>
	</target>
	
	<target name="test" depends="clean">
		<mkdir dir="${test.dir}"/>
		<exec executable="php" dir="php/test" output="${test.dir}/AllTests.xml">
			<arg value="all_tests.php"/>
		</exec>
	</target>
	
	<target name="deploy" depends="test,clean">
		<copy todir="${webapp.dir}" overwrite="true">
    		<fileset dir="."/>
  		</copy>
	</target>
</project>
