<project name="traildevils-build" basedir=".">
	<property name="webapp.dir" value="/var/www/html" />
	
	<target name="test">
		<exec executable="php" dir="php/test">
			<arg value="all_tests.php"/>
			<arg value="> ../../tests/AllTests.xml"/>
		</exec>
		
		<exec executable="tail" dir="php/test">
			<arg value="-n 1"/>
			<arg value=" ../../tests/AllTests.xml"/>
		</exec>

	</target>
	
	<target name="clean" depends="test">
		<delete includeemptydirs="true">
    		<fileset dir="${webapp.dir}" includes="**/*"/>
  		</delete>
	</target>
	
	<target name="deploy" depends="clean">
		<copy todir="${webapp.dir}" overwrite="true">
    		<fileset dir="."/>
  		</copy>
	</target>
</project>
